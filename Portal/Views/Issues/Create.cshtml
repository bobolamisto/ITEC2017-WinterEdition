@model Portal.Models.Issue

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Location.Latitude"></label>
                <input asp-for="Location.Latitude" class="form-control" id="register-latitude-input" />
                <span asp-validation-for="Location.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Location.Longitude"></label>
                <input asp-for="Location.Longitude" class="form-control" id="register-longitude-input" />
                <span asp-validation-for="Location.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedFiles"></label>
                <input asp-for="UploadedFiles" class="form-control" type="file" multiple/>
                <span asp-validation-for="UploadedFiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-6" style="height:500px" id="map-renderer">
        <div id="map"></div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/issue.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfEImrPrDRb-12UFkgRegFVSKekIAJmh8&callback=initMap">
    </script>

}


